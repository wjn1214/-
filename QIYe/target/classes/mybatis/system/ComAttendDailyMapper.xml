<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.emp.project.system.daily.mapper.ComAttendDailyMapper">
    
    <resultMap type="ComAttendDaily" id="ComAttendDailyResult">
        <result property="id"    column="id"    />
        <result property="empId"    column="emp_id"    />
        <result property="daysLate"    column="days_late"    />
        <result property="daysLeave"    column="days_leave"    />
        <result property="daysAbsent"    column="days_absent"    />
        <result property="daysOff"    column="days_off"    />
        <result property="createTime"    column="create_time"    />
        <result property="empName"    column="emp_name"    />
    </resultMap>

    <sql id="selectComAttendDailyVo">
        select id, emp_id, days_late, days_leave, days_absent, days_off, create_time, emp_name from com_attend_daily
    </sql>

    <select id="selectComAttendDailyList" parameterType="ComAttendDaily" resultMap="ComAttendDailyResult">
        <include refid="selectComAttendDailyVo"/>
        <where>  
            <if test="empId != null "> and emp_id = #{empId}</if>
            <if test="daysLate != null "> and days_late = #{daysLate}</if>
            <if test="daysLeave != null "> and days_leave = #{daysLeave}</if>
            <if test="daysAbsent != null "> and days_absent = #{daysAbsent}</if>
            <if test="daysOff != null "> and days_off = #{daysOff}</if>
            <if test="empName != null  and empName != ''"> and emp_name like concat('%', #{empName}, '%')</if>
        </where>
    </select>
    
    <select id="selectComAttendDailyById" parameterType="Long" resultMap="ComAttendDailyResult">
        <include refid="selectComAttendDailyVo"/>
        where id = #{id}
    </select>
    <select id="selectDailyByTime" resultType="com.emp.project.system.daily.domain.ComAttendDaily">
        select * from com_attend_daily where TO_DAYS(create_time)=TO_DAYS(NOW()) and emp_id=#{empId}
    </select>

    <insert id="insertComAttendDaily" parameterType="ComAttendDaily" useGeneratedKeys="true" keyProperty="id">
        insert into com_attend_daily
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="empId != null">emp_id,</if>
            <if test="daysLate != null">days_late,</if>
            <if test="daysLeave != null">days_leave,</if>
            <if test="daysAbsent != null">days_absent,</if>
            <if test="daysOff != null">days_off,</if>
            <if test="createTime != null">create_time,</if>
            <if test="empName != null and empName != ''">emp_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="empId != null">#{empId},</if>
            <if test="daysLate != null">#{daysLate},</if>
            <if test="daysLeave != null">#{daysLeave},</if>
            <if test="daysAbsent != null">#{daysAbsent},</if>
            <if test="daysOff != null">#{daysOff},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="empName != null and empName != ''">#{empName},</if>
         </trim>
    </insert>

    <update id="updateComAttendDaily" parameterType="ComAttendDaily">
        update com_attend_daily
        <trim prefix="SET" suffixOverrides=",">
            <if test="empId != null">emp_id = #{empId},</if>
            <if test="daysLate != null">days_late = #{daysLate},</if>
            <if test="daysLeave != null">days_leave = #{daysLeave},</if>
            <if test="daysAbsent != null">days_absent = #{daysAbsent},</if>
            <if test="daysOff != null">days_off = #{daysOff},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="empName != null and empName != ''">emp_name = #{empName},</if>
        </trim>
        where id = #{id} and  TO_DAYS(create_time)=TO_DAYS(NOW())
    </update>

    <delete id="deleteComAttendDailyById" parameterType="Long">
        delete from com_attend_daily where id = #{id}
    </delete>

    <delete id="deleteComAttendDailyByIds" parameterType="String">
        delete from com_attend_daily where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>